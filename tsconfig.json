{
    "compilerOptions":
    {
        "target": "ES2015",                          
        "module": "CommonJS",                    
        "lib": ["es6"],                     
        "allowJs": true,
        "outDir": "build",                          
        "rootDir": "src",
        "strict": true,         
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "./_legacy",
        "./node_modules",
        "./tests"
    ]
}
