{
    "compilerOptions":
    {
        "target": "es5",
        "module": "commonjs",              
        "declaration": true,                
        "allowJs": true,
        "outDir": "build",                          
        "rootDir": "src",
        "strict": true,         
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [
        "./_legacy",
        "./node_modules",
        "./tests"
    ]
}
