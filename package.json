{
  "name": "@assetory/logger",
  "version": "0.1.2",
  "description": "A redis logger, written in typescript",
  "type": "module",
  "main": "src/index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "lint": "eslint . --ext .ts",
    "test": "mocha -r ts-node/register 'tests/**/*ts'",
    "doc": "jsdoc ./build/index.js",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Assetory/logger.git"
  },
  "keywords": [],
  "author": "F. Rick Reich <frickreich@gmail.com>",
	"license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Assetory/logger/issues"
  },
  "homepage": "https://github.com/Assetory/logger#readme",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "jsdoc": "^3.6.6",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0"
  },
  "dependencies": {
    "log4js": "^6.3.0",
    "redis": "^3.0.2",
    "typescript": "^4.0.5"
  }
}
